@model IEnumerable<UserLive.Models.UserViewModel>

@{
    ViewData["Title"] = "UsersList";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var list = ViewBag.list;
}

<h2>Users List</h2>

<p>
    <a asp-action="Create" asp-controller="Home">Create New</a>
</p>
<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Password</th>
            <th>Phone</th>
            <th>Age</th>
            <th>City</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@item.user_name</td>
            <td>@item.user_email</td>
            <td>@item.user_pwd</td>
            <td>@item.user_phone</td>
            <td>@item.user_age</td>
            <td>@item.cityName</td>
            
            <td>
                @Html.ActionLink("Edit", "GetById", "Home", new { id = item.user_id }) |
                <a href='@Url.Action("DeleteRecord","Home",new {id=item.user_id})' onclick="return Confirm()">Delete </a>
                @*@Html.ActionLink("Delete", "DeleteRecord", "Home", new { id = item.user_id })*@
            </td>
        </tr>
}
    </tbody>
</table>


<script>
    const Confirm=()=> {
        return confirm('Are you sure you want to delete this record???');
    }

</script>